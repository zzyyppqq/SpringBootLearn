<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.springframework.org/schema/context
		 http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <bean id="person" class="com.zyp.springboot.learn.test.bean.Person" init-method="customInitMethod" destroy-method="customDestroyMethod">
        <property name="name" value="derek"/>
        <property name="car" ref="car"/>
    </bean>

    <bean id="car" class="com.zyp.springboot.learn.test.bean.Car" scope="prototype">
        <property name="brand" value="porsche"/>
    </bean>


    <bean class="com.zyp.springboot.learn.test.bean.CustomBeanFactoryPostProcessor"/>

    <bean class="com.zyp.springboot.learn.test.bean.CustomerBeanPostProcessor"/>

    <bean id="helloService" class="com.zyp.springboot.learn.test.aware.HelloService"/>

</beans>